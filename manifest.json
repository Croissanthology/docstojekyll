{
  "manifest_version": 3,
  "name": "GDocs to Jekyll",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://docs.google.com/*",
    "https://api.github.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["https://docs.google.com/document/*"],
    "js": ["content.js"]
  }],
  "action": {
    "default_popup": "popup.html"
  }
}

{

  "permissions": [
    "activeTab",
    "storage",
    "tabs"  
  ],
}
